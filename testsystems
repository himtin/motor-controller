    <script>
        // Chart.js Global Config
        Chart.defaults.color = '#94a3b8';
        Chart.defaults.font.family = "'Inter', sans-serif";
        
        // Helper
        function wrapLabel(str, maxLen) {
            if (str.length <= maxLen) return str;
            const words = str.split(' ');
            const lines = [];
            let currentLine = words[0];
            for (let i = 1; i < words.length; i++) {
                if (currentLine.length + 1 + words[i].length <= maxLen) {
                    currentLine += ' ' + words[i];
                } else {
                    lines.push(currentLine);
                    currentLine = words[i];
                }
            }
            lines.push(currentLine);
            return lines;
        }

        // --- 1. Voltage Protection Range Chart ---
        const voltageCtx = document.getElementById('voltageChart').getContext('2d');
        new Chart(voltageCtx, {
            type: 'bar',
            data: {
                labels: ['Input Voltage Range'],
                datasets: [
                    {
                        label: 'Under-Voltage Cutoff (<160V)',
                        data: [160],
                        backgroundColor: 'rgba(239, 68, 68, 0.5)', 
                        borderColor: '#ef4444',
                        borderWidth: 1,
                        barPercentage: 0.6
                    },
                    {
                        label: 'Safe Operating Area (160V-240V)',
                        data: [80],
                        backgroundColor: 'rgba(16, 185, 129, 0.5)',
                        borderColor: '#10b981',
                        borderWidth: 1,
                        barPercentage: 0.6
                    },
                    {
                        label: 'Over-Voltage Cutoff (>240V)',
                        data: [60], 
                        backgroundColor: 'rgba(239, 68, 68, 0.5)',
                        borderColor: '#ef4444',
                        borderWidth: 1,
                        barPercentage: 0.6
                    }
                ]
            },
            options: {
                indexAxis: 'y',
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    x: {
                        stacked: true,
                        grid: { color: '#334155' },
                        title: { display: true, text: 'Voltage (V AC)' },
                        min: 0,
                        max: 300
                    },
                    y: { stacked: true, display: false }
                },
                plugins: {
                    legend: { position: 'bottom', labels: { boxWidth: 12 } },
                    tooltip: {
                        callbacks: {
                            title: function(tooltipItems) {
                                const item = tooltipItems[0];
                                let label = item.chart.data.labels[item.dataIndex];
                                return Array.isArray(label) ? label.join(' ') : label;
                            },
                            label: function(context) {
                                if (context.datasetIndex === 0) return '0V - 160V: System Off';
                                if (context.datasetIndex === 1) return '160V - 240V: System Active';
                                if (context.datasetIndex === 2) return '240V+: System Off';
                            }
                        }
                    }
                }
            }
        });

        // --- 2. System Function Distribution Chart ---
        const funcCtx = document.getElementById('functionsChart').getContext('2d');
        new Chart(funcCtx, {
            type: 'doughnut',
            data: {
                labels: [
                    wrapLabel('Power Conversion (Rectifier/Inverter)', 20),
                    wrapLabel('Signal Processing (Analog)', 20),
                    wrapLabel('Digital Control (MCU Logic)', 20),
                    wrapLabel('Protection & Safety Circuits', 20)
                ],
                datasets: [{
                    data: [40, 15, 25, 20],
                    backgroundColor: ['#06b6d4', '#3b82f6', '#8b5cf6', '#ef4444'],
                    borderColor: '#1e293b',
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                cutout: '60%',
                plugins: {
                    legend: { position: 'right', labels: { boxWidth: 12 } },
                    tooltip: {
                        callbacks: {
                            title: function(tooltipItems) {
                                const item = tooltipItems[0];
                                let label = item.chart.data.labels[item.dataIndex];
                                return Array.isArray(label) ? label.join(' ') : label;
                            }
                        }
                    }
                }
            }
        });

        // --- 3. Airport HVAC Energy Profile Chart (NEW) ---
        const hvacCtx = document.getElementById('hvacChart').getContext('2d');
        new Chart(hvacCtx, {
            type: 'line',
            data: {
                labels: ['00:00', '04:00', '08:00', '12:00', '16:00', '20:00', '23:59'],
                datasets: [
                    {
                        label: 'Conventional Fixed-Speed Motor',
                        data: [90, 90, 90, 90, 90, 90, 90], // Constant load waste
                        backgroundColor: 'rgba(239, 68, 68, 0.1)',
                        borderColor: '#ef4444',
                        borderWidth: 2,
                        borderDash: [5, 5],
                        fill: true,
                        tension: 0
                    },
                    {
                        label: '1KW Smart FOC Controller',
                        data: [20, 15, 60, 85, 75, 50, 25], // Follows passenger traffic
                        backgroundColor: 'rgba(16, 185, 129, 0.2)', // Emerald fill
                        borderColor: '#10b981',
                        borderWidth: 2,
                        fill: true,
                        tension: 0.4 // Smooth curve
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: { color: '#334155' },
                        title: { display: true, text: 'Energy Usage (%)' }
                    },
                    x: {
                        grid: { display: false }
                    }
                },
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: { boxWidth: 12 }
                    },
                    tooltip: {
                        callbacks: {
                            title: function(tooltipItems) {
                                const item = tooltipItems[0];
                                let label = item.chart.data.labels[item.dataIndex];
                                return Array.isArray(label) ? label.join(' ') : label;
                            },
                            afterBody: function(context) {
                                return '\nNote: Smart control drops to ~15% during off-hours, saving massive costs.';
                            }
                        }
                    }
                }
            }
        });
    </script>
</body>
